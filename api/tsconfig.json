{
  "compilerOptions": {
    "module": "NodeNext",     
    "outDir": "dist",  
    "rootDir": "./src",
    "sourceMap": true,
    "target": "ESNext",        
    "strict": true,    
    "esModuleInterop": true,     
    "skipLibCheck": true,        
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src"
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],    
  "exclude": ["node_modules"]    
}